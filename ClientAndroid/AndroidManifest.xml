<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.exallon"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />
        
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_LOGS"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:debuggable="true" 
        android:name="ru.exallon.Application"
        android:theme="@android:style/Theme.Black.NoTitleBar">
        
        <activity
            android:label="@string/app_name"
            android:name="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="DBSettingsActivity" android:label="@string/db_settings_title"></activity>
        <activity android:name="DataViewActivity" android:configChanges="orientation"></activity>
        <activity android:name="AboutActivity"></activity>
        <activity android:name="HelpActivity"></activity>
        <activity android:name="FeedbackActivity"></activity>
        
    </application>

</manifest>